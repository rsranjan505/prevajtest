{% extends 'base.html.twig' %}

{% block title %} Contact !{% endblock %}

{% block body %}

    <div id="wrapper">
        {{ include('components/sidebar.html.twig') }}
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                 {{ include('components/top-header.html.twig') }}
               <div id="content-wrapper" class="d-flex flex-column">
                    <div id="content">
                        <div class="container-fluid">
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <div class="row">
                                        <h6 class="m-0 font-weight-bold text-primary">Update Contact  </h6>
                                      
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="p-5">
                                        {# <form class="user" method="post" action="{{ path('register_save')}}"> #}
                                        {{form_start(form, {'attr': {'class': 'user'}}) }}
                                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                            
                                            <div class="form-group">
                                                <label class="col-sm-3">Name</label>
                                                <div class="col-sm-7">
                                                     {{form_widget(form.name)}}
                                                </div>
                                            </div>
                                             <div class="form-group">
                                                <label class="col-sm-3">Mobile</label>
                                                <div class="col-sm-7">
                                                    {{form_widget(form.mobile)}}
                                                </div>
                                            </div>
                                             <div class="form-group">
                                                <label class="col-sm-3">Email</label>
                                                <div class="col-sm-7">
                                                    {{form_widget(form.email)}}
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-3">City</label>
                                                <div class="col-sm-7">
                                                     {{form_widget(form.city)}}
                                                </div>
                                            </div>
                                             <div class="form-group">
                                                <label class="col-sm-3">City</label>
                                                <div class="col-sm-7">
                                                     {{form_widget(form.is_active)}}
                                                </div>
                                            </div>
                                          
                                            <button type="submit" class="btn btn-primary" style="float:right;">
                                               Update
                                            </button>

                                        {# </form> #}
                                         {{form_end(form)}}
                                     </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{ include('components/footer.html.twig') }}
        </div>
    </div>

{% endblock %}